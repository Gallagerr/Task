<Window x:Class="Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DatePicker Name="datepicer" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="combo" HorizontalAlignment="Left" Margin="382,1,0,0" VerticalAlignment="Top" Width="161" >
            <ComboBoxItem Name="Save" Content="Скачать файл" MouseDoubleClick="Save_MouseDoubleClick" />
            <ComboBoxItem Name="MovieCatalog" Content="Переместить каталог" MouseDoubleClick="MovieCatalog_MouseDoubleClick" />
            <ComboBoxItem Name="SendMail" Content="Отправить E-mail" MouseDoubleClick="SendMail_MouseDoubleClick" />
        </ComboBox>
        <Label Name="lblTime" Content="" HorizontalAlignment="Left" Margin="198,0,0,0" VerticalAlignment="Top" Width="161" FontSize="18"/>
        <ComboBox HorizontalAlignment="Left" Margin="585,1,0,0" VerticalAlignment="Top" Width="161">
            <ComboBoxItem Content="День"/>
            <ComboBoxItem Content="Неделю"/>
            <ComboBoxItem Content="Месяц"/>
            <ComboBoxItem Content="Год"/>
        </ComboBox>

    </Grid>
</Window>
